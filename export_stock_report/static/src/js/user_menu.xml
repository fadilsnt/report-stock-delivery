<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-inherit="web.UserMenu" t-inherit-mode="extension">

        <xpath expr="//small[contains(@class,'oe_topbar_name')]" position="replace">

            <!-- DEBUG AKTIF -->
            <small t-if="env.debug"
                   class="oe_topbar_name d-none ms-2 text-start smaller lh-1 text-truncate d-lg-inline-block"
                   style="max-width: 200px">
                <t t-esc="userName"/>
                <mark class="d-block font-monospace text-truncate">
                    <i class="fa fa-database oi-small me-1"/>
                    <t t-esc="dbName"/>
                </mark>
            </small>

            <!-- DEBUG MATI -->
            <small t-else=""
                   class="oe_topbar_name d-none ms-2 text-start smaller lh-1 text-truncate d-lg-inline-block"
                   style="max-width: 200px">
                <t t-esc="userName"/>
                <span class="d-block font-monospace text-truncate">
                    <i class="fa fa-user oi-small me-1"/>
                    <t t-esc="userLogin"/>
                </span>
            </small>

        </xpath>

    </t>

</templates>
